            android:name="tn.opendata.tainan311.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tn.opendata.tainan311.NewRequestActivity"
            android:label="@string/title_activity_new_request" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.RequestListActivity"
            android:label="@string/title_activity_request_list" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.MyRequestActivity"
            android:label="@string/title_activity_my_request" >

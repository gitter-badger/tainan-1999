<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.opendata.tainan311" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- My Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Map -->
    <permission
        android:name="tn.opendata.tainan311.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="tn.opendata.tainan311.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:icon="@drawable/logo_tainan311"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAfpmiXTf3Nkv6h6o8HmDDnXEKKlZ7Argk" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".NewRequestIntentService" />

        <activity
            android:name="tn.opendata.tainan311.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.RequestListActivity"
            android:label="@string/title_activity_request_list" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.MyRequestActivity"
            android:label="@string/title_activity_my_request" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.ShowMapActivity"
            android:label="@string/title_activity_show_map" >
        </activity>
        <activity
            android:name="tn.opendata.tainan311.MainMapActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingActivity"
            android:label="@string/text_setting" />
    </application>

</manifest>
